<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2>Posts <a href="/posts/add" class="btn btn-success pull-right">Add Post</a></h2>
      <hr>
      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th>Post&nbsp;ID</th>
                        <th>Title</th>
                        <th>Post&nbsp;Date</th>
                        <th>Category</th>
                        <th>Published</th>
            </tr>
          </thead>
         <tbody>
                {{#each posts}}
                <tr>
                    <td>{{id}}</td>
                    <td>{{title}}</td>
                    <td> {{#formatDate postDate}}{{/formatDate}}</td>
                    <td><a href="/posts?category={{category}}">{{category}}</a></td>
                    <td>{{published}}</td>
                    <td><a href="./posts/delete/{{id}}" class="btn btn-danger">Remove</a></td>
                </tr>
                {{else}}
                <tr>
                    <td colspan="8"></td>
                </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
      <div class="col-md-12 text-center">
        {{#unless posts}}
        <strong>{{message}}</strong>
        {{/unless}}
      </div>
    </div>
  </div>
</div>
